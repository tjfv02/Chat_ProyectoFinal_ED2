@model IEnumerable<DiseñoChatMVC.Models.Mensaje>

@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<p>
    @Html.ActionLink("Enviar Mensaje", "Mensajeria")
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label(" ")
        </th>
        <th>
            @Html.Label("Mensaje")
        </th>

        <th>
            @Html.Label("Destino")
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Usuario1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contenido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoraAcual)
            </td>
            <td>
                @Html.ActionLink("Info", "Details", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>

